<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :role %>
      <%= f.select :role, [['Admin', 'admin'],['Bug Manager', 'bug manager'],
       ['Consultant', 'consultant'], ['Contact Person', 'contact person'],
       ['Finance', 'finance'], ['Program Manager', 'Program Manager'],
       ['Program Designer', 'program designer'], ['Team Leader', 'team leader'],
       ['Coach', 'coach'], ['Role Manager', 'role manager']],
        class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
